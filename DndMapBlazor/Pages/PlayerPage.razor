@layout PlayingLayout
@page "/PlayerPage"

@using DndMapBlazor.Components.Bord
@using Layout

<div id="view" style="width:100%; height:100%;">
    @if(!isFullScreen)
    {
        <div class="row">
            <button @onclick="OpenInFullScreen" class="btn btn-outline-primary" style="margin: auto; margin-bottom:10px; width:max-content">FullScreen</button>
        </div>
    }
    else if (session != null)
    {
        <DMPlayingBord session="session" />
    }
</div>

